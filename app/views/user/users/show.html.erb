
<div class = "container my-4">
  <h4><strong style="background-color:#EEEEEE;">My page<i class="fa-regular fa-user"></i></strong></h4>
    <div class='row'>
      <table class="table table-bordered border-dark table-hover table-inverse custom-table">
        <tbody>
          <tr>
              <th>氏名</th>
               <td><%= @user.last_name %>
          <%= @user.first_name %></td>
         </tr>
         <tr>
              <th>カナ</th>
               <td><%= @user.last_name_kana %>
              <%= @user.first_name_kana %></td>
         </tr>
         <tr>
              <th>生年月日</th>
               <td><%= @user.birthday %></td>
         </tr>
         <tr>
              <th>メールアドレス</th>
               <td><%= @user.email %></td>
         </tr>
         <tr>
              <th>電話番号</th>
               <td><%= @user.phone_number %></td>
         </tr>
         <tr>
              <th>郵便番号</th>
               <td><%= @user.postal_code %></td>
         </tr>
         <tr>
              <th>住所</th>
               <td><%= @user.address %></td>
         </tr>
          <div class="col-12 mt-3 text-center mx-auto">

        <table class="table">
          <thead>
            <tr>
              <th scope="col">予約日</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @user_reservations.each do |user_reservation| %>
              <td>
                <%=  user_reservation.day.strftime("%Y年%m月%d日(%a)") %><%=  user_reservation.time.strftime("%H:%M") %>
              </td>
            </tr>
            <% end %>
            <% if @user_reservations.blank? %>
              <tr>
                <td>予約はありません。</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-12 mt-3 text-center mx-auto">
        <h3>来院履歴</h3>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">予約日</th>
            </tr>
          </thead>
          <tbody>
            <% @visit_historys.each do |visit_history| %>
              <tr>
                <td>
                  <%=  visit_history.day.strftime("%Y年%m月%d日(%a)") %><%=  visit_history.time.strftime("%H:%M") %>
                </td>
              </tr>
            <% end %>
            <% if @visit_historys.blank? %>
              <tr>
                <td>来院履歴はありません。</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
        </tbody>
      </table>
</div>
