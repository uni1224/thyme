<div class="container my-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <h2>ログイン</h2>
        <%= form_with model: @user, url: session_path(resource_name),local: true do |f| %>
          <table class="table table-borderless mt-3">
            <tr>
              <td class="text-center"><%= f.label :email, 'メールアドレス' %></td>
              <td class="form-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %>
              </td>
            </tr>
            <tr>
              <td class="text-center"><%= f.label :password, 'パスワード' %></td>
              <td class="form-group">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
              </td>
            <tr>
              <td></td>
        <% if devise_mapping.rememberable? %>
              <td class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </td>
        <% end %>
              <td class="actions">
                <%= f.submit "ログイン",class: "btn btn-info" %>
              </td>
            </tr>
          </table>
        <% end %>
      <%= render "user/shared/links" %>
    </div>
  </div>
</div>