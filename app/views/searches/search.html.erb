<div class="container">
  <% if admin_signed_in? %>
    <div class='col-md-12'>
      <h4><%= @word %>の検索結果</h4>
        <p>[全<%= @users.count %>件]</p>
          <table class ="table">
            <tr bgcolor="#bc8f8f">
              <td>会員ID</td>
              <td>氏名</td>
              <td>メールアドレス</td>
              <td>電話番号</td>
              <td>ステータス</td>
            </tr>
                <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to admin_user_path(user) do %>
                  <%= user.user_name %>
                  <% end %></td>
              <td><%= user.email %></td>
              <td><%= user.phone_number %></td>
                <% if user.is_deleted == false %>
              <td style = "color: #4ec51e;">有効</td>
                <% else %>
              <td style = "color: #ff3838;">退会</td>
                <% end %>
            </tr>
                <% end %>
          </table>
    </div>
  <% end %>
</div>